{
  "apps": [
    {
      "name": "smartseller-storefront",
      "script": "server.js",
      "instances": 1,
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production",
        "PORT": 5173
      },
      "error_file": "./logs/err.log",
      "out_file": "./logs/out.log",
      "log_file": "./logs/combined.log",
      "time": true,
      "autorestart": true,
      "max_restarts": 10,
      "min_uptime": "10s",
      "max_memory_restart": "1G",
      "watch": false,
      "ignore_watch": [
        "node_modules",
        "logs",
        "pids"
      ],
      "kill_timeout": 5000,
      "wait_ready": true,
      "listen_timeout": 10000
    }
  ]
}