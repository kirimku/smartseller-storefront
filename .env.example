###############################
# SmartSeller Storefront .env #
###############################

# API base URL for backend
VITE_API_BASE_URL="http://localhost:8090"

# Default storefront slug for development (optional)
VITE_TENANT_SLUG="rexus"

# JWT auth (frontend-only usage; tokens are obtained via login)
# Leave blank; app will store tokens dynamically.
VITE_ACCESS_TOKEN=""

# Database connection (used by backend; reference here for dev docs)
DB_HOST="localhost"
DB_PORT="5432"
DB_NAME="smartseller"
DB_USER="smartseller"
DB_PASSWORD="password"

# Test accounts (for development/testing)
TEST_CUSTOMER_EMAIL="john.doe@example.com"
TEST_CUSTOMER_PASSWORD="SecurePass123!"
TEST_STOREFRONT_SLUG="rexus"

# WSL tip: print queries when using psql
# Example: echo "SELECT * FROM customers LIMIT 1;" | psql -h $DB_HOST -U $DB_USER -d $DB_NAME -p $DB_PORT